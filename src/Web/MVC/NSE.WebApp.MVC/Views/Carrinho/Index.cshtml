@using NSE.WebApp.MVC.Extensions
@model NSE.WebApp.MVC.Models.Carrinho.ShoppingCartViewModel

@{
    ViewData["Title"] = "Meu carrinho de compras";
}

<section class="padding-y">
    <div class="container">

        <vc:Summary></vc:Summary>

        @{
            if (Model.Items.Any())
            {
                <div class="row">
                    <main class="col-md-9">
                        <div class="card">


                            <table class="table table-borderless table-shopping-cart">
                                <thead class="text-muted">
                                    <tr class="small text-uppercase">
                                        <th scope="col">Produto</th>
                                        <th scope="col">Valor</th>
                                        <th scope="col">Quantidade</th>
                                        <th scope="col"></th>
                                        <th scope="col"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (var item in Model.Items)
                                        {
                                            <tr>
                                                <td>
                                                    <figure class="itemside">
                                                        <div class="aside">
                                                            <img src="~/images/produtos/@item.Image" alt="@item.Name" class="img-sm">
                                                        </div>
                                                        <figcaption class="info">
                                                            <a asp-controller="Catalogo" asp-action="ProdutoDetalhe" asp-route-id="@item.ProductId"><h6 style="padding-top: 10px" class="title text-dark">@item.Name</h6></a>
                                                            <p class="text-muted small">@this.UnityByProduct(item.Quantity)</p>
                                                        </figcaption>
                                                    </figure>
                                                </td>
                                                <td>
                                                    <div class="price-wrap">
                                                        <var class="price"> @this.FormatCurrency(item.Price * item.Quantity)</var>
                                                        <small class="text-muted">@this.FormatCurrency(item.Price) cada</small>
                                                    </div>
                                                </td>
                                                <form method="post" asp-controller="Carrinho" asp-action="UpdateCartItem">
                                                    <td>

                                                        <input type="hidden" id="ProductId" name="ProductId" value="@item.ProductId" />

                                                        <div class="text-left">
                                                            <select id="Quantity" name="Quantity" style="width: 80px" class="form-control">
                                                                @{
                                                                    @Html.Raw(this.SelectOptionsByQuantity(5, item.Quantity))
                                                                }
                                                            </select>
                                                        </div>


                                                    </td>
                                                    <td>
                                                        <div class="text-right">
                                                            <button type="submit" class="btn btn-success">
                                                                <i class="fas fa-sync"></i>
                                                            </button>
                                                        </div>
                                                    </td>
                                                </form>
                                                <td>
                                                    <form method="post" asp-controller="Carrinho" asp-action="RemoveCartItem">
                                                        <div>

                                                            <input type="hidden" id="ProductId" name="ProductId" value="@item.ProductId" />

                                                            <button type="submit" class="btn btn-danger">
                                                                <i class="fas fa-trash-alt"></i>
                                                            </button>

                                                        </div>
                                                    </form>
                                                </td>
                                            </tr>
                                        }
                                    }

                                </tbody>
                            </table>

                            <div class="card-body border-top">
                                <a asp-controller="Pedido" asp-action="DeliveryAddress" class="btn btn-primary float-md-right"> Finalizar Compra <i class="fa fa-chevron-right"></i> </a>
                                <a asp-controller="Catalogo" asp-action="Index" class="btn btn-light"> <i class="fa fa-chevron-left"></i> Continuar Comprando </a>
                            </div>
                        </div>


                    </main>
                    <aside class="col-md-3">
                        <div class="card mb-3">
                            <div class="card-body">
                               <form asp-action="ApplyVoucher">
                                    <div class="form-group">
                                        <label>Possui Voucher?</label>

                                        <div class="input-group">
                                            <input type="text" class="form-control" name="code" id="code" value="@Model.Voucher?.Code" placeholder="Voucher Disconto">
                                            <span class="input-group-append">
                                                <button type="submit" class="btn btn-primary">Aplicar</button>
                                            </span>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                         <div class="card">
                            <div class="card-body">
                                @{
                                    if (Model.HasVoucher)
                                    {
                                        <dl class="dlist-align">
                                            <dt>Valor original:</dt>
                                            <dd class="text-right">@this.FormatCurrency(Model.Total + Model.Discount)</dd>
                                        </dl>
                                        <dl class="dlist-align" style="color:green">
                                            <dt>Desconto:</dt>
                                            <dd class="text-right">@this.FormatCurrency(Model.Discount)</dd>
                                        </dl>
                                    }
                                }
                                <dl class="dlist-align">
                                    <dt>Total:</dt>
                                    <dd class="text-right h5">
                                        <strong>@this.FormatCurrency(Model.Total)</strong>
                                    </dd>
                                </dl>
                                <hr>
                                <p class="text-center mb-3">
                                    <img src="~/images/misc/payments.png" height="26">
                                </p>

                            </div>
                        </div>
                    </aside>
                </div>
            }
